# exa
alias ls="exa -lh --icons --git --git-ignore --color=always --group-directories-first"
alias la="exa -lha --icons --git --git-ignore --color=always --group-directories-first" # all files and dirs
alias ll="exa -T --icons --git --git-ignore --color=always --group-directories-first" # long format
alias lt="exa -Ta --icons --git --git-ignore --color=always --group-directories-first" # tree format

# other
alias v="nvim"
alias g="git"
